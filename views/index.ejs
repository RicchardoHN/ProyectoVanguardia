<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <title>Integrar Mongo Express</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <style>
      .container{
        max-width: 960px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="shadow-lg pb-3 mb-5 bg-body rounder">
        <h4>Datos de la Persona</h4>
        <form action="/crear" method="post">
          <div class="col-md-6">
            <label for="nombre" class="form-l">Nombre:</label>
            <input id="nombre" name="nombre" type="text" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="apellido" class="form-l">Apellido:</label>
            <input id="apellido" name="apellido" type="text" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label for="edad" class="form-l">Edad:</label>
            <input id="edad" name="edad" type="number" class="form-control" required>
          </div>
          <button type="submit" class="w-100 btn btn-guardar btn-lg"><i class="bi bi-save"></i>Registrar Datos</button>
        </form>
        <table  id="tablapersonas" class="table mt-4">
          <thead>
            <tr>
              <th style="display:none">ID</th>
              <th>Nombre</th>
              <th>Apeliido</th>
              <th>Edad</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% Persona.forEach( (Personas) => { %>
              <tr>
                <td style="display:none"><%= Personas._id %></td>
                <td><%= Personas.nombre %></td>
                <td><%= Personas.apellido %></td>
                <td><%= Personas.edad %></td>
                <td>
                  <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                  <a href="/borrar/<%= Personas._id %>" class="btn btn-outline-danger bi bi-trash"></a>
                </td>
              </tr>
              <% }) %>
          </tbody>

        </table>
      </div>
      <div id="ModalPersona" class="modal fade"  tabindex="-1" aria-labelledby="ModalPersona" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Editar datos</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/editar" method="post">
                <input id="id_editar" name="id_editar" type="text" hidden>
                <div class="mb-3">
                  <label for="nombre_editar" class="col-form-label">Nombre:</label>
                  <input id="nombre_editar" name="nombre_editar" type="text" class="form-control" value="">
                </div>
                <div class="mb-3">
                    <label for="apellido_editar" class="col-form-label">Apellido:</label>
                    <input id="apellido_editar" name="apellido_editar" type="text" class="form-control" value="">
                  </div>
                <div class="mb-3">
                  <label for="edad_editar" class="col-form-label">Edad:</label>
                  <input id="edad_editar" name="edad_editar" type="number" class="form-control" value="">
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary">Actualizar</button>
                </div>
              </form>
            </div>
            
          </div>
        </div>
      </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="js/code.js"></script>
  </body>
</html>
